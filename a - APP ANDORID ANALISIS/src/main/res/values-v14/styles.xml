<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="RobotoMedium">
        <!--item name="android:textColor">@color/colorAccent</item-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:textAppearanceButton">@style/AppTheme.textAppearanceButton</item>
        <item name="android:buttonStyle">@style/AppThemeForm.Button</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppThemeForm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windowBackgroundForm</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#B55B1B</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="InvitationUserSafecard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#03a678</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InvitationUserNoSafecard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.textAppearanceButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppThemeForm.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:height">58dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppThemeForm.Button2">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:height">58dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:borderlessButtonStyle">@color/white</item>
    </style>

    <style name="LabelDays">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/border_inactive</item>
    </style>

    <style name="BtnPassword">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36dp</item>
    </style>

    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="EditTextInvitation">
        <!--<item name="android:colorControlActivated">@android:color/transparent</item>-->
    </style>

    <style name="LogsTextInputLayout">
        <item name="colorControlNormal">#a0a0a0</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

</resources>
