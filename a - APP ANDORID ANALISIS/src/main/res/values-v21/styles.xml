<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"/>-->

    <!--inherit from the material theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:textAppearanceButton">@style/AppTheme.textAppearanceButton</item>
        <item name="android:buttonStyle">@style/AppThemeForm.Button</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeBackground">@color/colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>

    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppThemeForm" parent="AppTheme">
        <item name="android:windowBackground">@color/windowBackgroundForm</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="AppTheme.textAppearanceButton" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeForm.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:height">58dp</item>
        <item name="android:textSize">18dp</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeForm.Button2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:height">58dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:borderlessButtonStyle">@color/white</item>
    </style>

    <style name="LabelDays">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/border_inactive</item>
    </style>

    <style name="AppThemeForm.Button3" parent="Widget.AppCompat.Button.Colored">
        <item name="android:height">58dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/border_orange_filled</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeForm.Button4" parent="Widget.AppCompat.Button.Colored">
        <item name="android:height">58dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/border_white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
