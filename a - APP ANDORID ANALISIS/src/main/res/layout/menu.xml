<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/menu_invite"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="#f56954"
        android:paddingTop="@dimen/activity_margin_half"
        android:paddingBottom="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/menu_invite_ic"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_invitar"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/menu_invite_text"
            android:text="@string/bottom_menu_invite"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/menu_invite_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:paddingBottom="0dp"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_invitations"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="#00a65a"
        android:paddingTop="@dimen/activity_margin_half"
        android:paddingBottom="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/menu_invitations_ic"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_invitacion"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/menu_invitations_text"
            android:text="@string/bottom_menu_invitations"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/menu_invitations_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:paddingBottom="0dp"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_access"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="#00c0ef"
        android:paddingTop="@dimen/activity_margin_half"
        android:paddingBottom="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/menu_access_ic"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_accesos"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/menu_access_text"
            android:text="@string/bottom_menu_accesses"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/menu_access_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:paddingBottom="0dp"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_payment"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="#607D8B"
        android:paddingTop="@dimen/activity_margin_half"
        android:paddingBottom="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/menu_payment_ic"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_parking"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/menu_payment_text"
            android:text="@string/bottom_menu_parking"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/menu_payment_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:paddingBottom="0dp"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>